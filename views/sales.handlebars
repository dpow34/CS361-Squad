		 <!-- Form to add a Sale -->
        <div class="jumbotron">
          <form action="/sales" method="POST" class=field id="editForm" onsubmit="false">
            <legend><h1>Enter A New Sale</h1></legend>
              
            <div class="row">
                
                <div class="form-group col-md-4">
                  <label for="input_customer" >Select A Customer</label>
                  <select id="input_customer" name="input_customer" class="form-control">
                    {{#each customers}}
                    <option value="{{customer_ID}}">{{first_name}} {{last_name}}</option>
                    {{/each}}
                  </select>
                </div>
                
                <div class="form-group col-md-4">
                    <label for="input_date_completed">Date</label>
                    <input class="form-control" type="date" value="2011-08-19" id="input_date_completed" name="input_date_completed">
                </div>

                <div class="form-group col-md-4">
                  
                </div>
                
                <div class="form-group col-md-4">
                  <label for="item-selector">Select Sale Items</label>
                  <select multiple class="form-control" id="input_item" name="input_item">
                    {{#each items}}
                    <option value="{{item_ID}}">{{name}}</option>
                    {{/each}}
                  </select>
                </div>

                <div class="form-group col-md-8">
                  <label for="repair-notes">The Items In the Sale Are</label>      
                  <textarea readonly class="form-control" id="input_sale_items" name="input_sale_items" rows="1"></textarea>
                </div>

                <div class="form-group col-md-4" id="button-div">
                  <button type="submit" class="btn btn-success" id="submit-button">Add Sales</button>
                </div>
              
            </div>
            
          </form>
        </div>
            
          </form>
        </div>

		<!-- Sales Table -->
        <div class="jumbotron">
			<div class="container">
                <div><h1>Sales:</h1></div>  
                <div class="form-box">
			
					<input class = "search-field Sales" id="search_input" onkeyup="searchSales()" type = "text" placeholder="Enter Customer name for search"/>
				</div>
            </div>


            <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th scope="col">Customer</th>
                    <th scope="col">Ordered Date</th>
					<th scope="col">Items</th>
                    <th scope="col">Quantity</th>
					<th scope="col">Total Cost</th>
                    <th scope="col">Modify</th>
                  </tr>
                </thead>
                <tbody id = "searchTable">
                  
				  
				  {{#each sales}}
                  <tr>
                    <td>{{first_name}} {{last_name}}</td>
                    <td>{{sale_date}}</td>
					<td>{{items}}</td>
                    <td>{{quantity}}</td>
					<td>{{total}}</td>
                    <td>
                        <button type="button" class="btn btn-warning" onclick="editSale({{sale_ID}})">Edit</button>
                        <button type="button" class="btn btn-danger" onclick="deleteSale({{sale_ID}})">Delete</button>
                    </td>
                  </tr>
                  {{/each}}
                  
                </tbody>
            </table>
		</div>
