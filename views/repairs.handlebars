        <!-- Form to add a repair -->
        <div class="jumbotron">
          <form action="/repairs" method="POST" class=field id="editForm" onsubmit="false">
            <legend><h1>Enter A Repair</h1></legend>
              
            <div class="row">
                
                <div class="form-group col-md-4">
                  <label for="input_customer" >Select A Customer</label>
                  <select id="input_customer" name="input_customer" class="form-control">
                    {{#each customers}}
                    <option value="{{customer_ID}}">{{first_name}} {{last_name}}</option>
                    {{/each}}
                  </select>
                </div>
                
                <div class="form-group col-md-4">
                    <label for="input_date_completed">Date</label>
                    <input class="form-control" type="date" value="2011-08-19" id="input_date_completed" name="input_date_completed" required>
                </div>

                <div class="form-group col-md-4">
                  <label for="input_total">Repair Total</label>
                  <input type="text" class="form-control" id="input_total" name="input_total" required>
                </div>
                
                <div class="form-group col-md-4">
                  <label for="item-selector">Select Repair Items</label>
                  <select multiple class="form-control" id="input_item" name="input_item">
                    {{#each items}}
                    <option value="{{item_ID}}">{{name}}</option>
                    {{/each}}
                  </select>
                </div>

                <div class="form-group col-md-8">
                  <label for="repair-notes">Repair Notes</label>
                  <textarea class="form-control" id="input_notes" name="input_notes" rows="4"></textarea>
                </div>

                <div class="form-group col-md-8">
                  <label for="repair-notes">The Items In the Repair Are</label>      
                  <textarea readonly class="form-control" id="input_repair_items" name="input_repair_items" rows="1"></textarea>
                </div>

                <div class="form-group col-md-4" id="button-div">
                  <button type="submit" class="btn btn-success" id="submit-button">Add Repairs</button>
                </div>
              
            </div>
            
          </form>
        </div>

        <!-- Table of Repairs -->
        <div class="jumbotron">

            <div id="title" class="container" >
                <div><h1>Repairs</h1></div>  
            </div>

            <table class="table table-striped table-bordered">
                <thead>
                  <tr>
                    <th scope="col">Customer</th>
                    <th scope="col">Date</th>
                    <th scope="col">Total</th>
                    <th scope="col">Items</th>
                    <th scope="col">Notes</th>
                    <th scope="col">Modify</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each repairs}}
                  <tr>
                    <td>{{first_name}} {{last_name}}</td>
                    <td>{{date_completed}}</td>
                    <td>{{total}}</td>
                    <td>{{items}}</td>
                    <td>{{notes}}</td>
                    <td>
                        <button type="button" class="btn btn-warning" onclick="editRepair({{repair_ID}})">Edit</button>
                        <button type="button" class="btn btn-danger" onclick="deleteRepair({{repair_ID}})">Delete</button>
                    </td>
                  </tr>
                  {{/each}}
                    </tbody>
                </table>
            
        </div>
        
        <script src="" async defer>
          $(function () {
                $('#datetimepicker1').datetimepicker();
            });
        </script>