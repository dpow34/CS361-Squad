                    </tr>
                    {{/each}}
                </table>
            </div>

            <div class = "col"></div>
    
        </div>
		
		 <div class="row">
            
           
            <div class="col">
              <button type="" class="btn btn-success" onclick="updateSale({{update_sale.sale_ID}})">Update Sale</button>
