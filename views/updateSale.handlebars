<div class="jumbotron">
  <form action="/sales/reload" method="GET" class=field id="update-sale">
    <fieldset>
        <legend><h1>Edit The Sale</h1></legend>
        <div class="row">
            <div class = "col">
                <label for="state">Customer</label>
                <input readonly type="text" class = "form-control" value="{{update_sale.first_name}}" name="customer_name" id="customer_name">
            </div>
            
            <div class = "col">
            </div>
        </div>
        
        <div class = "row">
            <div class = "col">
                
            </div>
            <div class="col"></div>
                       
        </div>

       

        <div class = "row">
            
       
            
            <div clase = "col">
                <table class = "table table-striped table-bordered" name="items-table" id="items-table">
                    <thead>
                        <th scope="col">Item Name</th>
                        <th scope="col">Quantity In Order</th>
                        
                    </thead>
                    {{#each update_sale.items}}
                    <tr class="item">
                        <td>{{name}}</td>
