  <form action="/customers" method="GET" class=field id="update-customer">
    <fieldset>
        <legend><h1>Edit {{update_customer.first_name}} {{update_customer.last_name}} </h1></legend>
        <div class="row">
            <div class = "col">
                <label for="state">State</label>
